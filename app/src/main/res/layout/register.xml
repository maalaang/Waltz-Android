<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#553DD1">



    <Spinner
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:id="@+id/register_sp_country"
        android:layout_gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="104dp"
        android:layout_toLeftOf="@+id/register_et_number"
        android:layout_toStartOf="@+id/register_et_number"
        android:background="#ffffff"
        android:popupBackground="#ffffff"/>


    <EditText
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/register_et_number"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="104dp"
        android:background="#ffffff"
        android:hint="  enter phone number"
        android:textColorHint="@color/fieldText"/>

    <Button
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:text="Next"
        android:id="@+id/register_bt_next"
        android:background="@color/buttonColor"
        android:layout_below="@+id/register_sp_country"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:textColor="#ffffff"/>



</RelativeLayout>
