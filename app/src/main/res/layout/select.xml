<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#99000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="383dp"
        android:layout_gravity="bottom"
        android:background="#ffffffff">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/select_iv_photo"
            android:src="#123456" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="video"
            android:id="@+id/select_bt_video"
            android:layout_below="@+id/select_iv_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="55dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="voice"
            android:id="@+id/select_bt_voice"
            android:layout_alignBottom="@+id/select_bt_video"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Name"
            android:id="@+id/select_tv_name"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_alignBottom="@+id/select_iv_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>
